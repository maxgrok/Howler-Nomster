<!-- PHOTOS booyah-box -->
<div class="booyah-box col-10 offset-1">
  <h1 class="float-left">My Photos</h1>
  <div class="clear"></div>
    <div id="scroll">
      <div class="row">
       
<!-- Still to be done: Make photos visible (known?) to user.show -->
       
          <% @user.photos.each do |photo| %>
            <div class="col-12 col-sm-2", style="padding-top:50px; padding-bottom:30px" >
               <% if @user.photos.picture.present? %>
               <h5>xxxxxxxxxx photo</h5>
                 
                   <%= image_tag photo.picture, height: '100px', class: 'image_fluid' %></br >
                
                 <%= photo.caption %>
               <% end %>
            </div>
          <% end %>
  
        <br/ >
      </div>
    </div>
</div>

<!-- Include BACK link -->
<div class="float-right"> 
  <%= link_to "<< Back <<", root_url %>
</div>
