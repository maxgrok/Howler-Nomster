<div class="booyah-box col-10 offset-1">
  <h1>Edit Your Comment</h1>   

  <%= simple_form_for @comment do |f| %>
    <%= f.input :message %>
    <%= f.input :rating %>
    <br />
    <%= f.submit 'Update', class: 'btn-primary' %>
    
    <!-- Include BACK link -->
    <div class="float-right">
        <%= link_to "<< Back <<", root_url %>
    </div>
    
  <% end %>
</div>
